@{
    ViewData["Title"] = "Home Page";
}
@model Conversion
<style>
    textarea{
        width: 100%;
        height: 500px;
    }
</style>
<div class="text-center">
    <h1 class="display-4">XML to JSON</h1>
    <form class="row" method="post" action="">
        <div class="col-5">
            <textarea asp-for="XmlText"></textarea>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-info">Convert</button>
        </div>
        <div class="col-5">
            <textarea asp-for="JsonText"></textarea>
        </div>
    </form>
</div>